{
  "expo": {
    "name": "Sesli Kitap",
    "slug": "sesli-kitap",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "userInterfaceStyle": "automatic",
    "splash": {
      "backgroundColor": "#137fec"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.seslikitap.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#137fec"
      },
      "package": "com.seslikitap.app"
    },
    "web": {},
    "extra": {
      "eas": {
        "projectId": "your-project-id-will-be-generated"
      }
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow Sesli Kitap to access your microphone for voice search."
        }
      ]
    ]
  }
}

